extends ../layout


block content
  .container
    h1.main-title= question.title

    .form-group
      p LOCATION
      .location= question.location
    .form-group
      .row
        .col-2
          p DATE START
        .col-1
          .start_date= question.start_date
    .form-group
      .row
        .col-2
          p DATE END
        .col-1
         .end_date= question.end_date
    .form-group
      .row
        .col-2
          p START TIME
        .col-1
         .start_time= question.start_time
    .form-group
      .row
        .col-2
          p END TIME
        .col-1
         .end_time= question.end_time
    .form-group
      .row
        .col-2
          p EVENT DESCRIPTION
        .col-1
          .content= question.content
    .form-group
      .row
        .col-2
          p ORGANIZER NAME
        .col-1
          .organizer= question.organizer
    .form-group
      .row
        .col-2
          p ORGANIZER DESCRIPTION
        .col-1
          .description= question.description
    //- div(class="question.price")
    .form-group
      .row
        .col-2
          p EVENT TYPE
        .col-1
          .event_type= question.event_type
    .form-group
      .row
        .col-2
          p EVENT TOPIC
        .col-1
          .event_topic= question.evnet_topic

      .buttons
        button.btn.btn-primary #[i.fa.fa-thumbs-up] Like
        if currentUser && question.author.id == currentUser.id
          | 
          a.btn.btn-outline-secondary(href=`/questions/${question.id}/edit`) Edit
          | 
          a.btn.btn-outline-danger.need-confirm-btn(href=`/questions/${question.id}?_method=delete`) Delete


    //- .question.show
    //-   include _question

      .buttons
        button.btn.btn-primary #[i.fa.fa-thumbs-up] Like
        if currentUser && question.author.id == currentUser.id
          | 
          a.btn.btn-outline-secondary(href=`/questions/${question.id}/edit`) Edit
          | 
          a.btn.btn-outline-danger.need-confirm-btn(href=`/questions/${question.id}?_method=delete`) Delete
      
    if question.numAnswers > 0
      hr
      h3 #{question.numAnswers} Answer(s)
      .answers.show
        each answer in answers
          include _answer

    form(action=`/questions/${question.id}/answers`, method='POST')
      .form-group
        label(for='answer') Your Answer
        textarea.form-control(name="content", rows="5")
      button.btn.btn-primary(type="submit") Post Your Answer

