extends ../layout


block content
  .container
    h1.main-title= question.title

    .col
      .col-xs-5
        div(class="date_start")
          p #{moment(question.date_start).format('MM DD')}
        h1 #{question.title}
        div(class="organizer")
          p by #{question.organizer}
      .container
        br
        .col-xs-2
          .row
            .col-8
              .row
                .col-3
                  i(class="fa fa-upload fa-3x", aria-hidden="true")
                .col-3
                  i(class="fa fa-bookmark-o fa-3x", aria-hidden="true")
            .col-4
              button(type="button", class="btn btn-register btn-lg") REGISTER
      br
      .container
      br
      .col-xs-5
        .row
          .col-8
            p #{question.content}
          .col-4
            p #{moment(question.start_date).format('DD MM YYYY')}

    br
    .buttons
      button.btn.btn-primary #[i.fa.fa-thumbs-up] Like
      if currentUser && question.author.id == currentUser.id
        | 
        a.btn.btn-outline-secondary(href=`/questions/${question.id}/edit`) Edit
        | 
        a.btn.btn-outline-danger.need-confirm-btn(href=`/questions/${question.id}?_method=delete`) Delete


    //- .question.show
    //-   include _question

      .buttons
        button.btn.btn-primary #[i.fa.fa-thumbs-up] Like
        if currentUser && question.author.id == currentUser.id
          | 
          a.btn.btn-outline-secondary(href=`/questions/${question.id}/edit`) Edit
          | 
          a.btn.btn-outline-danger.need-confirm-btn(href=`/questions/${question.id}?_method=delete`) Delete
      
    if question.numAnswers > 0
      hr
      h3 #{question.numAnswers} Answer(s)
      .answers.show
        each answer in answers
          include _answer

    form(action=`/questions/${question.id}/answers`, method='POST')
      .form-group
        label(for='answer') Your Answer
        textarea.form-control(name="content", rows="5")
      button.btn.btn-primary(type="submit") Post Your Answer

